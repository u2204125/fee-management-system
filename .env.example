# Environment Variables for Netlify Deployment

# MongoDB Connection (Required)
MONGODB_URI=your_mongodb_atlas_connection_string

# Session Secret (Required)
SESSION_SECRET=your_super_secure_session_secret_key_here

# Node Environment
NODE_ENV=production

